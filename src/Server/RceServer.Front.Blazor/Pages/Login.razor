@page "/auth/login"

@inject AuthService AuthService
@inject NavigationManager NavigationManager

<div class="container">
	<h2>Log in</h2>
	<hr />
	<div class="col-md-4 align-self-center">
		<EditForm Model="_model" OnValidSubmit=@OnValidSubmit>
			<DataAnnotationsValidator />
			<div class="form-group">
				<label for="email">Email</label>
				<InputText id="email" class="form-control" @bind-Value="_model.Email" />
				<ValidationMessage class="text-red" For="@(() => _model.Email)" />
			</div>
			<div class="form-group">
				<label for="password">Password</label>
				<InputText id="password" type="password" class="form-control" @bind-Value="_model.Password" />
				<ValidationMessage class="text-red" For="@(() => _model.Password)" />
			</div>
			<div class="form-group">
				<div class="text-red"> @_error </div>
			</div>
			<div class="form-group">
				<button type="submit" class="btn btn-primary">Log in</button>
			</div>
			<div>
				<p>
					<a href="/auth/forgotpassword">Forgot your password?</a>
				</p>
				<p>
					<a href="/auth/register">Register as a new user</a>
				</p>
			</div>
		</EditForm>
	</div>
</div>

@code {
	private LogInModel _model = new LogInModel();
	private string _error = string.Empty;

	private async Task OnValidSubmit(EditContext editContext)
	{
		_error = null;
		_error = await AuthService.LogIn(_model);
		if (string.IsNullOrWhiteSpace(_error))
		{
			NavigationManager.NavigateTo("/");
		}
	}
}
